<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.vstream" name="vStream" version="0.5.7" provider-name="Venom,TmpName">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
        <import addon="script.common.plugin.cache" version="0.9.1"/>
        <import addon="plugin.video.youtube" version="2.9.2"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
        <import addon="script.module.urlresolver" optional="true"/>
        <import addon="repository.vstream" version="0.0.2"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="fr">vStream</summary>
        <description lang="fr">vStream est un module de streaming français, trouvez tous vos films, séries et mangas.[CR][CR]Contributeur: Johngf, Razorex, Kodigoal, Chataigne73, Arias800</description>
        <summary lang="en">vStream</summary>
        <description lang="en">vStream module and a french streaming, find all your movies, TV shows and mangas.[CR][CR]Contributeur: Johngf, Razorex, Kodigoal, Chataigne73, Arias800</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.vstream"
        name="vStream Repository"
        version="0.0.2"
        provider-name="Venom">
    <extension point="xbmc.addon.repository" name="vStream XBMC Addon Repository">
        <checksum>https://raw.githubusercontent.com/Kodi-vStream/venom-xbmc-addons/master/addons.xml.md5</checksum>
        <info compressed="false">https://raw.githubusercontent.com/Kodi-vStream/venom-xbmc-addons/master/addons.xml</info>
        <datadir zip="true">https://github.com/Kodi-vStream/venom-xbmc-addons/raw/master/repo</datadir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="fr">vStream Repository</summary>
        <description lang="fr">Installer vStream</description>
        <summary lang="en">vStream Repository</summary>
        <description lang="en">Download and install vStream</description>
        <platform>all</platform>
    </extension>
</addon>

<addon
	id="skin.osmc"
	version="17.0.3"
	name="OSMC Skin"
	provider-name="OSMC">
	<requires>
		<import addon="xbmc.gui" version="5.12.0"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.00" debugging="false">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="16x9" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">The default skin for OSMC</summary>
		<description lang="en">Original design: Bolteh[CR]Original Kodi skin: Hitcher</description>
		<news>Fix crash in PVR guide window; Font updates</news>
	</extension>
	<assets>
		<icon>icon.png</icon>
		<fanart>extras/backgrounds/Default.png</fanart>
	</assets>
</addon>
</addons>
